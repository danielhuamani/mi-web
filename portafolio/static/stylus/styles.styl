@import 'fonts'
//colores
c-celeste = #0A6EBD
c-negro = #000000
c-rojo = #EA5455
c-plomo = #1c2833
c-blanco = #fff
c-crema = #f6f6f6
//fuente

lato = 'Lato', sans-serif;
open = 'Open Sans', sans-serif;
//clases generales

*
    margin 0px
    padding 0px

ul li
    list-style-type none

a
    text-decoration none
.cnt-general
    width 98%
    max-width 1200px
    margin auto

.btn
    padding 8px 15px
    font-family lato
    border-radius 4px

.btn-primary
    background c-plomo
    color c-blanco

    transition 0.3s ease all
    &:hover
        background c-rojo
/*********** HEADER ************/

header
    position fixed
    top 0px
    z-index 40
    border-bottom 1px solid c-rojo
    background #1c2833
    width 100%

    &:before
        content ""
    .cnt-general
        display flex
        align-items center
        justify-content space-between
        h1.logo
            font-size 32px
            font-family lato
            color c-blanco
        nav.menu-principal


            ul
                display flex

                align-items center
                justify-content space-around
                li.active
                    a
                        background c-rojo

                li

                    a
                        display block
                        padding 20px 20px
                        color c-blanco
                        font-family lato
                        font-size 18px
                        transition .2s all ease
                        font-weight 400
                        border-bottom 5px solid transparent
                    &:hover
                        a
                            background c-rojo





#presentacion
    background-image url("../img/perfil-2.jpeg")
    margin-top 66px
    padding-top 30px
    padding-bottom 30px
    background-size cover
    position relative
    height 300px
    &:after
        content ""
        width 100%
        height 100%
        background black
        opacity 0.6
        position absolute
        top 0px
        left 0px
    .cnt-general
        position relative
        z-index 2
        display flex
        align-items center
        height 100%
        justify-content center
        .links
            margin-top 40px
            ul
                display flex
                justify-content space-around
                li
                    margin 0px 10px
                    a
                        border-radius 5px
                        transition 0.3s ease all
                        padding 8px 10px 5px 10px
                        font-size 24px
                        i
                            color white
                    a.bitbucket:hover
                        background #205081
                    a.github:hover
                        background black
                    a.facebook:hover
                        background #365899
                    a.youtube:hover
                        background #cc181e
                    a.linkedin:hover
                        background #00a0dc
        .page
            padding 30px 50px
            position relative
            border 1px solid c-blanco
            border-bottom none
            &:after
                content ""
                left 0px
                bottom 0px
                position absolute
                width 50px
                height 1px
                background white
            &:before
                content ""
                right 0px
                bottom 0px
                position absolute
                width 50px
                height 1px
                background white
            h2
                color c-blanco
                font-family lato
                font-size 42px
                text-align center
                margin-bottom 10px
            h3
                color c-blanco
                font-family lato
                font-size 28px
                text-align center
                position absolute
                bottom -12px
                left 0px
                right 0px
                margin auto
                letter-spacing 2px
        figure
            margin-right 60px
            width 250px
            img
                border-radius 50%
                width 250px
                height auto
        .descripcion
            font-size 20px
            color white
            line-height 28px
            font-family lato
h2.title
    margin-bottom 50px
    display inline-block
    padding 0px 20px
    font-size 30px
    color c-plomo
    font-family lato
    border-bottom 2px solid c-rojo
#perfil
    background c-crema
    padding-top 50px
    padding-bottom 30px
    .mis-hablidades
        margin-top 20px
        .cnt-tipo-skill
