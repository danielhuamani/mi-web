#experiencia
    padding-bottom 30px
    padding-top 40px
    .cnt-general
        text-align center
        .cnt-modal
            .close
                display none
            .open
                display flex !important
                width 60%
                height 100%
                position fixed
                left 0px
                right 0px
                align-items center
                z-index 60
                top 0
                margin auto
                justify-content center
            .modal
                .overlay
                    width 100%
                    height 100%
                    background rgba(0,0,0,0.4)
                    position fixed
                    top 0
                    right 0px
                    z-index 50
                .content
                    padding 20px
                    border-radius 5px
                    background c-blanco
                    position relative
                    z-index 60
                    a
                        display block
                        background c-plomo
                        padding 10px 0px
                        img
                            display block
                            margin auto
                    .icon-close
                        color c-blanco
                        cursor pointer
                        border-bottom-left-radius 5px
                        border-top-right-radius 5px
                        background c-rojo
                        font-size 32px
                        position absolute
                        top 0
                        right 0px
                    .title-modal
                        font-family lato
                        margin-bottom 5px
                        font-size 24px
                        color c-plomo
                        transition 0.3s eaes all
                        font-weight bold
                    .descripcion
                        border 1px solid c-plomo
                        font-family open
                        font-size 16px
                        padding 20px 10px
                        text-align justify
                        p
                            margin-bottom 10px
                        ul
                            padding-left 40px
                            li
                                list-style-type disc
        .cnt-exp
            display flex
            flex-wrap wrap
            justify-content space-between
            .exp
                max-width 300px
                display flex
                height 170px
                margin 0px 10px 20px 10px
                background c-crema
                border 1px solid c-plomo
                border-radius 4px
                transition 0.3s ease all
                transform scale(1)
                &:hover
                    box-shadow 1px 1px 2px c-plomo
                figure
                    width 200px
                    img
                        width 100%
                        height auto
                        display block
                .descripcion
                    padding 10px
                    text-align left
                    position relative
                    color black
                    .titulo-exp
                        font-family lato
                        display block
                        margin-bottom 5px
                        font-size 18px
                        color c-plomo
                        transition 0.3s eaes all
                        font-weight bold
                        &:hover
                            color c-rojo
                    .labor
                        font-family open
                        font-size 14px
                        text-align justify
                        margin-bottom 10px
                    .periodo
                        color black
                        position absolute
                        left 0px
                        right 0px
                        margin auto
                        margin 0px 10px
                        bottom 5px
                        display flex
                        justify-content space-between
                        span
                          font-family open
                          font-size 14px
                        .inicio
                            font-family open
                            font-size 14px
                        .fin
                            font-family open
                            font-size 14px
#portafolio
    text-align center
    padding-top 40px
    padding-bottom 20px
    background c-crema
    .categorias
        margin-bottom 50px
        ul
            display flex
            justify-content center
            li
                margin 0px 20px
                a
                    padding 5px 12px
                    border-radius 5px
                    color white
                    background c-plomo
                    font-family lato
                    transition 0.3s ease all
                    &:hover
                        background c-rojo
                a.active
                    background c-rojo
    .proyectos
        display flex
        flex-wrap wrap
        justify-content space-between
        .proyecto
            width 30%
            position relative
            cursor pointer
            margin-bottom 30px
            box-shadow 0px 1px 8px 0px rgba(39,49,65,0.2)
            figure

                img

                    width 100%
                    height auto
                    display block
            .descripcion-proyecto
                padding 8px
                background c-blanco
                border-top 3px solid c-rojo

                .descripcion
                    margin-top 10px
                    font-size 14px
                    font-family open
                    text-align left
                h3.titulo-proyecto
                    text-align left
                    font-family lato
                    z-index 20
                    font-size 20px
                    transition 0.4s ease all
                    color c-plomo

                    font-size 18px
            .capa
                background c-rojo
                position absolute
                left 0px
                right 0px
                margin auto
                top 0
                height 100%
                width 100%
                opacity 0
                z-index 10
                transition 0.2s ease all
