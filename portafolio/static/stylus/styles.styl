    .paginacion
        margin-top 20px

        ul
            display flex
            justify-content center
            li
                margin 0px 8px
                a
                    font-size 17px
                    border-radius 4px
                    padding 6px 10px
                    background c-plomo
                    color white
                    transition 0.3s ease all
                    font-family lato
                    &:hover
                        background c-rojo
section#contacto
    text-align center
    background-image url("../img/img-contacto.jpg")
    padding-top 40px
    padding-bottom 30px

    background-size cover
    position relative
    // height 400px
    &:after
        content ""
        width 100%
        height 100%
        background black
        opacity 0.6
        position absolute
        top 0px
        left 0px
    .cnt-general
        z-index 2
        position relative
        h2.title
            color white
        .descripcion
            color white
            font-size 16px
            max-width 800px
            margin auto
            font-family open
            margin-bottom 40px
            text-align justify
        form
            display flex
            justify-content space-between
            flex-wrap wrap
            flex-direction column
            .cnt-input

                width 80%
                margin auto
                input
                    padding-left 5px
                    font-family lato
                    margin-bottom 10px
                    border none
                    height 36px
                    border-radius 4px
                    width 100%
                    color c-plomo
                    font-size 16px
                    box-sizing border-box
            .cnt-area
                width 80%
                margin auto
                textarea
                    padding-left 5px
                    padding-top 4px
                    font-family lato
                    border-radius 4px
                    width 100%
                    height 105px
                    color c-plomo
                    font-size 16px
                    box-sizing border-box

            .cnt-button
                margin-top 20px
                button
                    font-family lato
                    border none
                    padding 10px 22px
                    cursor pointer
                    font-size 18px
                    color white
                    border-radius 4px
                    transition 0.3s ease all
                    background c-rojo
                    &:hover
                      background c-plomo


